video_processor:
  server:
    port: <%= @video_server_port %> 
 
cmsdb:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>
    db_address: <%= @node[:deploy][:video_server][:database][:host] %> 
    db_port: <%= @node[:deploy][:video_server][:database][:port] %> 
    db_user: <%= @node[:deploy][:video_server][:database][:username] %> 
    db_password: <%= @node[:deploy][:video_server][:database][:password] %> 
    db_name: <%= @node[:deploy][:video_server][:database][:database] %>
    wants_postgres: 1 

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: video_server
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
