api:
  server:
  port: <%= @video_server_port %> 

  brightcove_api:
    max_write_connections: 1
    max_read_connections: 50
    max_retries: 5

controllers:
  brightcove_controller:
    port: <%= @controller_port %>
    service_url: http://<%= @cmsapi_host %>:<%= @cmsapi_port %>/
    mastermind_url: http://<%= @mastermind_host %>:<%= @mastermind_port %>/get_directives
    
supportServices:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: cmsapi 
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
