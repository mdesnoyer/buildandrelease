api:
  brightcove_api:
    max_write_connections: 1
    max_read_connections: 50
    max_retries: 5

controllers:
  brightcove_controller:
    port: <%= @controller_port %>
    service_url: http://<%= @cmsapi_host %>:<%= @cmsapi_port %>/
    mastermind_url: http://<%= @mastermind_host %>:<%= @mastermind_port %>/get_directives
    
cmsdb:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>
    db_address: <%= @node[:deploy][:bc_controller][:database][:host] %> 
    db_port: <%= @node[:deploy][:bc_controller][:database][:port] %> 
    db_user: <%= @node[:deploy][:bc_controller][:database][:username] %> 
    db_password: <%= @node[:deploy][:bc_controller][:database][:password] %> 
    db_name: <%= @node[:deploy][:bc_controller][:database][:database] %>

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: bc_controller 
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
