description "Neon system metrics"

start on runlevel [234]
stop on runlevel [0156]

kill timeout 30
limit nofile 65536 65536

setuid <%= @user %>
setgid <%= @group %>

chdir <%= @neon_root_dir %>
env VIRTUAL_ENV=<%= @neon_root_dir %>/.pyenv
env PATH="${VIRTUAL_ENV}/bin:$PATH"
exec ${VIRTUAL_ENV}/bin/python <%= @neon_root_dir %>/monitoring/check_system_health.py --utils.monitor.carbon_server <%= @carbon_host %> --utils.monitor.carbon_port <%= @carbon_port %>
respawn
