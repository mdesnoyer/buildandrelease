# The configuration file needs to define the sources, 
# the channels and the sinks.
# Sources, channels and sinks are defined per agent, 
# in this case called 'agent'

<%= @agent %>.sources = http_source
<%= @agent %>.channels = chan1

# Define the possible sinks. They are in a failover group where the collector 
# ips are first.
<% ncollectors = @collector_ips.length + @failover_collector_ips.length %>

<%= @agent %>.sinks = <%= @collector_ips.map.with_index{ |x, i| "pk#{i}"}.join(" ") %> <%= @failover_collector_ips.map.with_index{ |x, i| "bk#{i}"}.join(" ") %>
<%= @agent %>.sinkgroups = failo
<%= @agent %>.sinkgroups.failo.processor.type = failover
<%= @agent %>.sinkgroups.failo.sinks = <%= @collector_ips.map.with_index{ |x, i| "pk#{i}"}.join(" ") %> <%= @failover_collector_ips.map.with_index{ |x, i| "bk#{i}"}.join(" ") %>

<% @collector_ips.each.with_index do |ip, idx| %>
  <%= @agent %>.sinks.pk<%= idx %>.type = avro
  <%= @agent %>.sinks.pk<%= idx %>.channel = chan1
  <%= @agent %>.sinks.pk<%= idx %>.hostname = <%= ip%>
  <%= @agent %>.sinks.pk<%= idx %>.port = <%= @collector_port %>
  <%= @agent %>.sinkgroups.failo.priority.pk<%= idx %>.priority = <%= ncollectors - idx %>
<% end %>

<% @failover_collector_ips.each.with_index do |ip, idx| %>
  <%= @agent %>.sinks.bk<%= idx %>.type = avro
  <%= @agent %>.sinks.bk<%= idx %>.channel = chan1
  <%= @agent %>.sinks.bk<%= idx %>.hostname = <%= ip%>
  <%= @agent %>.sinks.bk<%= idx %>.port = <%= @collector_port %>
  <%= @agent %>.sinkgroups.failo.priority.bk<%= idx %>.priority = <%= ncollectors - idx - @collector_ips.length %>
<% end %>

# The source is an http json source
<%= @agent %>.sources.http_source.type = http
<%= @agent %>.sources.http_source.channels = chan1
<%= @agent %>.sources.http_source.port = <%= @json_http_source_port %>
<%= @agent %>.sources.http_source.bind = localhost

# Add metadata to the event
<%= @agent %>.sources.file_source.interceptors = addhost addtime
<%= @agent %>.sources.file_source.interceptors.addhost.type = static
<%= @agent %>.sources.file_source.interceptors.addhost.key = srchost
<%= @agent %>.sources.file_source.interceptors.addhost.value = <%= @hostname %>
<%= @agent %>.sources.file_source.interceptors.addtime.type = timestamp

# The channel is in memory
<%= @agent %>.channels.chan1.type = memory
<%= @agent %>.channels.chan1.capacity = 1000
<%= @agent %>.channels.chan1.transactionCapacity = 1000