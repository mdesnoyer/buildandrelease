stats_cluster_type: <%= @stats_cluster_type %>
stats_db_polling_delay: <%= @stats_polling_delay %>
video_db_polling_delay: <%= @video_polling_delay %>
s3_bucket: <%= @directive_bucket %>
directive_filename: <%= @directive_filename %>
publishing_period: <%= @publishing_period %>
expiry_buffer: <%= @expiry_buffer %>
serving_update_delay: <%= @serving_update_delay %>
incr_stats_host: <%= @incr_stats_host %>
tmp_dir: <%= @tmp_dir %>

stats:
  cluster:
    cluster_name: <%= @stats_cluster_name %>

cmsdb:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>
    db_address: <%= @node[:deploy][:mastermind][:database][:host] %> 
    db_port: <%= @node[:deploy][:mastermind][:database][:port] %> 
    db_user: <%= @node[:deploy][:mastermind][:database][:username] %> 
    db_password: <%= @node[:deploy][:mastermind][:database][:password] %> 
    db_name: <%= @node[:deploy][:mastermind][:database][:database] %>
    wants_postgres: 1 
    send_callbacks: <%= @send_callbacks %>
    isp_host: <%= @isp_host %> 

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
