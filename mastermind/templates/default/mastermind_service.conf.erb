description "Neon Mastermind"
author  "Mark Desnoyer <desnoyer@neon-lab.com>"

start on runlevel [234]
stop on runlevel [0156]

kill timeout 30
limit nofile 65536 65536

setuid <%= @user %>
setgid <%= @group %>

chdir <%= @neon_root_dir %>
script
  source <%= @neon_root_dir %>/enable_env
  <%= @neon_root_dir %>/mastermind/server.py -c <%= @config_file%>
end script

respawn