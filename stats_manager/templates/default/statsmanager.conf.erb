stats:
  cluster_manager:
    cluster_type: <%= @cluster_type %>
    input_path: "<%= @input_path %>"
    cleaned_output_path: "<%= @cleaned_output_path %>"
    batch_period: <%= @batch_period %>
    cluster_ip: <%= @cluster_ip %>
    max_task_instances: <%= @max_task_instances %>

  batch_processor:
    schema_bucket: neon-avro-schema

  cluster:
    ssh_key: <%= @emr_key %>    
    cluster_subnet_id: <%= @cluster_subnet_id %>
    cluster_name: <%= @cluster_name %>
    cluster_log_uri: <%= @cluster_log_uri %>

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: statsmanager
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
