stats:
  airflow:
    dags:
      neon:
        quiet_period: <%= @node[:stats_manager][:quiet_period] %>
        mr_jar: <%= @node[:stats_manager][:mr_jar] %>
        input_path: "<%= @node[:stats_manager][:input_path] %>"
        staging_path: "<%= @node[:stats_manager][:staging_path] %>"
        output_path: "<%= @node[:stats_manager][:cleaned_output_path] %>"
        cc_cleaned_path: "<%= @node[:stats_manager][:cc_cleaned_path] %>"
        cleaning_mr_memory: <%= @node[:stats_manager][:cleaning_mr_memory] %>
        clicklog_period: <%= @node[:stats_manager][:clicklog_period] %>
        max_task_instances: <%= @node[:stats_manager][:max_task_instances] %>
        airflow_start_date: "<%= @node[:stats_manager][:airflow_start_date] %>"
        full_run_input_path: "<%= @node[:stats_manager][:full_run_input_path] %>"
        notify_email: "<%= @node[:stats_manager][:notify_email] %>"

  cluster:
    ssh_key: <%= @emr_key %>    
    cluster_subnet_ids: <%= @cluster_subnet_ids %>
    cluster_name: <%= @cluster_name %>
    cluster_log_uri: <%= @cluster_log_uri %>
    cluster_type: <%= @cluster_type %>
    public_ip: <%= @cluster_ip %>
    yarn_max_memory_allocation: <%= @node[:stats_manager][:yarn_max_memory_allocation] %>
    n_core_instances: <%= @node[:stats_manager][:n_core_instances] %>
    master_instance_type: <%= @node[:stats_manager][:master_instance_type] %>

  impala_table:
    schema_bucket: neon-avro-schema
    parquet_memory: <%= @node[:stats_manager][:parquet_memory] %>

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: statsmanager
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
