stats:
  cluster_manager:
    cluster_type: <%= @cluster_type %>
    input_path: "s3://neon-tracker-logs-v2/v2.2/*/*/*/*"
    cleaned_output_path: "s3://neon-tracker-logs-v2/cleaned/"
    batch_period: <%= @batch_period %>
    cluster_ip: <%= @cluster_ip %>
    max_task_instances: <%= @max_task_instances %>

  batch_processor:
    schema_bucket: neon-avro-schema

  cluster:
    ssh_key: <%= @emr_key %>    
    cluster_name: "Neon Event Cluster"

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: statsmanager
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
