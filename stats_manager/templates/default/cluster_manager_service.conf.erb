description "Cluster Manager"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5
umask 022

setuid <%= @user %>
setgid <%= @group %>

env AIRFLOW_HOME=<%= @airflow_home %>
export AIRFLOW_HOME

console log

chdir <%= @neon_root_dir %>
exec <%= @neon_root_dir %>/stats/cluster_manager.py -c <%= @config_file%>
respawn
