sleep: <%= @sleep %>
account: "<%= @account %>"
cmsapi_user: <%= @node[:monitoring][:cmsapi_user] %>
cmsapi_pass: <%= @node[:monitoring][:cmsapi_pass] %>

cmsapiv2:
  client:
    auth_host: <%= @node[:monitoring][:auth_host] %>
    api_host: <%= @node[:monitoring][:api_host] %>

cmsdb:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>
    db_address: <%= @node[:deploy][:monitoring][:database][:host] %> 
    db_port: <%= @node[:deploy][:monitoring][:database][:port] %> 
    db_user: <%= @node[:deploy][:monitoring][:database][:username] %> 
    db_password: <%= @node[:deploy][:monitoring][:database][:password] %> 
    db_name: <%= @node[:deploy][:monitoring][:database][:database] %>
    wants_postgres: 1 

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
