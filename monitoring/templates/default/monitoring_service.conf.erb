description "Neon Benchmarking and monitoring Server"

start on runlevel [234]
stop on runlevel [0156]

kill timeout 30
limit nofile 65536 65536

setuid <%= @user %>
setgid <%= @group %>

chdir <%= @neon_root_dir %>
env VIRTUAL_ENV=<%= @neon_root_dir %>/.pyenv
env PATH="${VIRTUAL_ENV}/bin:$PATH"
exec ${VIRTUAL_ENV}/bin/python <%= @neon_root_dir %>/monitoring/benchmark_neon_pipeline.py -c <%= @config_file%>

respawn
