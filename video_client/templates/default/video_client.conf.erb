api:
  client:
    model_file: <%= @model_file %>
    video_server: <%= @video_server_host %>:<%= @video_server_port %>
    max_videos_per_proc: <%= @max_videos_per_proc %>
    dequeue_period: <%= @dequeue_period %>
    notification_api_key: <%= @notification_api_key %>
    server_auth: <%= @video_server_auth %>
    extra_workers: <%= @extra_workers %>
    video_temp_dir: <%= @video_temp_dir %>

  server:
    port: 8081

  brightcove_api:
    max_write_connections: 1
    max_read_connections: 50
    max_retries: 5
 
supportServices:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: video_client 
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
