video_processor:
  client:
    model_file: <%= @model_file %>
    model_autoscale_groups: <%= @node[:neon][:model_autoscale_groups] %>
    request_concurrency: <%= @node[:neon][:request_concurrency] %>
    max_videos_per_proc: <%= @max_videos_per_proc %>
    dequeue_period: <%= @dequeue_period %>
    notification_api_key: <%= @notification_api_key %>
    extra_workers: <%= @extra_workers %>
    video_temp_dir: <%= @video_temp_dir %>
    cmsapi_user: <%= @node[:neon][:cmsapi_user] %>
    cmsapi_pass: <%= @node[:neon][:cmsapi_pass] %>
    frontend_base_url: <%= @node[:neon][:frontend_base_url] %>

  video_processing_queue:
    queue_prefix: <%= @node[:video_client][:video_queue_prefix]%>

cmsapiv2:
  client:
    auth_host: <%= @node[:neon][:auth_host] %>
    api_host: <%= @node[:neon][:api_host] %>
 
cmsdb:
  neondata:
    accountDB: <%= @video_db_host %>
    videoDB: <%= @video_db_host %>
    thumbnailDB: <%= @video_db_host %>
    dbPort: <%= @video_db_port %>
    db_address: <%= @node[:deploy][:video_client][:database][:host] %> 
    db_port: <%= @node[:deploy][:video_client][:database][:port] %> 
    db_user: <%= @node[:deploy][:video_client][:database][:username] %> 
    db_password: <%= @node[:deploy][:video_client][:database][:password] %> 
    db_name: <%= @node[:deploy][:video_client][:database][:database] %>
    wants_postgres: 1 

utils:
  logs:
    file: <%= @log_file %>
    do_stderr: 0
    do_stdout: 1
    level: info
    flume_url: http://localhost:<%= @flume_log_port %>
    loggly_tag: video_client 
  monitor:
    carbon_server: <%= @carbon_host %>
    carbon_port: <%= @carbon_port %>
